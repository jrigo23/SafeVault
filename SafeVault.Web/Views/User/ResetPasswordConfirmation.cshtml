@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">Password Reset Successful</h2>
                    <div class="alert alert-success" role="alert">
                        <i class="bi bi-check-circle-fill"></i> Your password has been reset successfully!
                    </div>
                    <p class="text-center">
                        You can now login with your new password.
                    </p>
                    <div class="text-center mt-3">
                        <a asp-action="Login" class="btn btn-primary">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
