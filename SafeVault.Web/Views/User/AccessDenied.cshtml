@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="display-1">403</h1>
                    <h2 class="card-title">Access Denied</h2>
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i> You do not have permission to access this resource.
                    </div>
                    <p>
                        If you believe this is an error, please contact your administrator.
                    </p>
                    <div class="mt-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
