@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">Check Your Email</h2>
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-envelope-fill"></i> If an account with that email address exists, we've sent you a password reset link.
                    </div>
                    <p class="text-center">
                        Please check your email and click the link to reset your password.
                    </p>
                    <div class="text-center mt-3">
                        <a asp-action="Login" class="btn btn-primary">Return to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
